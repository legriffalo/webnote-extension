{
    "manifest_version": 3,
    "name": "Univeral Markup Extension",
    "version": "1.0",
    "description": "Adds a transparent canvas to the webpage.",
    "permissions": ["windows","activeTab","tabs","scripting","storage"],
    "host_permissions": ["*://*/*"],

    "background": {
        "service_worker": "sw.js"
    },

    "icons": {
      "32": "images/icon36.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    },
    "action":{ 
        "default_icon": {
        "48": "images/icon48.png",
        "128": "images/icon128.png"
        }
        
    },

    "web_accessible_resources":[{
        "matches": ["http://*/*", "https://*/*"],
        "resources": [
            "images/icon48.png","content.js", "scripts/draggable.js", "html/ui.html", "css/output.css"
        ]
    }]
    
  }